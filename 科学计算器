new Vue({
    el: '#app',
    data: {
        firstnum: '',
        endnum: '',
        operator: '',
        fscod: true,
        infos: '',
        listNum: 1
    },
    methods: {
        clearDisplay() {
            this.infos = '';
            this.firstnum = '';
            this.endnum = '';
        },
        getNumber(e) {
            this.fscod ? (this.firstnum += e, this.infos = this.firstnum) : (this.endnum += e, this.infos = this.firstnum + this.operator + this.endnum);
        },
        getOperator(e) {
            this.fscod = false;
            this.operator = e;
            this.infos = this.firstnum + this.operator;
        },
        calculate() {
            // 不变
        },
        getList(str) {
            // 不变
        }
    }
});

